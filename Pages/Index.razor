@page "/"
@inject IJSRuntime JS
@inject OWFBlazorDemo.Services.AppState AppState

<h1>Hello, world!</h1>

Welcome to your new app.

APPSTATE: Navigating to this page clears you APP State storage.

@code
{
    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender)
        {
            JS.InvokeVoidAsync("interopInterface.AttachHandlers");

            if (AppState != null) {
                AppState.reset();
            }
        }
    }
}